# Define que este é o arquivo de configuração raiz
root = true

# Regras aplicáveis a todos os arquivos do projeto
[*]
charset = utf-8                # Codificação de caracteres
indent_style = space           # Usa espaços em vez de tabs
indent_size = 4                # Quatro espaços de indentação (padrão Python)
end_of_line = lf               # Quebra de linha estilo Unix (LF)
insert_final_newline = true    # Adiciona uma linha em branco no fim do arquivo
trim_trailing_whitespace = true # Remove espaços no final das linhas

# Regras específicas para arquivos Python
[*.py]
indent_size = 4                # Black usa 4 espaços
max_line_length = 88           # Mantém compatível com Black
trim_trailing_whitespace = true

# Regras para arquivos Markdown (.md)
[*.md]
trim_trailing_whitespace = false  # Mantém espaços em branco (necessários para quebras de linha)
indent_size = 2                   # Recomendação visual para markdowns
end_of_line = lf

# Regras para arquivos de log (.log)
[*.log]
insert_final_newline = false      # Evita linha em branco no fim de logs
trim_trailing_whitespace = false  # Não altera logs existentes

# Regras para arquivos JSON e YAML (caso o projeto cresça)
[*.{json,yml,yaml}]
indent_size = 2
end_of_line = lf
